<% if locations.any? %>
  <div class="row">
    <% locations.each do |location| %>
      <% flood = location.latest_flood_risk %>
      <% if flood.present? %>
        <div class="col-md-6 mb-3">
          <div class="card border-<%= flood.severity_info[:color] || 'secondary' %>">
            <div class="card-body">
              <h6 class="card-title">
                <%= location.name %>
              </h6>
              <div class="mb-3">
                <% badge_class = case flood.flood_severity
                                when "low" then "success"
                                when "moderate" then "warning"
                                when "high" then "danger"
                                else "secondary"
                                end %>
                <span class="badge bg-<%= badge_class %>">
                  <%= flood.flood_severity&.upcase || "UNKNOWN" %>
                </span>
              </div>
              <div class="mt-3">
                <small class="text-muted d-block">Flood Description</small>
                <div class="h6 mb-0">
                  <%= flood.flood_description %>
                </div>
              </div>
              <div class="mt-3 pt-3 border-top">
                <small class="text-muted d-block">Probability</small>
                <div class="h6 mb-0">
                  <i class="bi bi-percent"></i>
                  <%= (flood.flood_probability * 100).round(1) %>%
                </div>
              </div>
              <% if flood.recorded_at.present? %>
                <div class="mt-2">
                  <small class="text-muted">
                    <i class="bi bi-clock-history"></i>
                    Updated <%= time_ago_in_words(flood.recorded_at) %> ago
                  </small>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% else %>
  <div class="alert alert-info mb-0">
    <i class="bi bi-info-circle"></i>
    <strong>No flood risk data available</strong>
    <p class="mb-0 mt-2">Flood risk data will appear here once synchronized.
    <%= link_to "Sync now", sync_weather_dashboards_path, method: :post, class: "alert-link" %></p>
  </div>
<% end %>
