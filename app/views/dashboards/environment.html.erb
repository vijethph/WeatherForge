<div class="container-fluid mt-4">
  <div class="row mb-4">
    <div class="col-12">
      <h1 class="display-5">
        <i class="bi bi-globe"></i> Environmental Data
      </h1>
      <p class="lead text-muted">Marine weather, air quality & flood risk information</p>
    </div>
  </div>

  <% if @locations.empty? %>
    <div class="alert alert-info text-center py-5">
      <i class="bi bi-cloud-slash" style="font-size: 4rem;"></i>
      <h3 class="mt-3">No locations added yet</h3>
      <p class="text-muted">Add locations to view environmental data</p>
      <%= link_to "Add Location", locations_path, class: "btn btn-primary btn-lg mt-3" %>
    </div>
  <% else %>
    <!-- Marine Weather & Air Quality -->
    <div class="row g-4 mb-4">
      <div class="col-lg-6">
        <div class="card h-100">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-water"></i> Marine Weather</h5>
          </div>
          <div class="card-body">
            <%= turbo_frame_tag "marine_weather" do %>
              <%= render "dashboards/marine_weather", locations: @locations %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="col-lg-6">
        <div class="card h-100">
          <div class="card-header bg-success text-white">
            <h5 class="mb-0"><i class="bi bi-lungs"></i> Air Quality</h5>
          </div>
          <div class="card-body">
            <%= turbo_frame_tag "air_quality" do %>
              <%= render "dashboards/air_quality", locations: @locations %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Flood Risk -->
    <div class="row g-4">
      <div class="col-12">
        <div class="card">
          <div class="card-header bg-warning text-dark">
            <h5 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Flood Risk Assessment</h5>
          </div>
          <div class="card-body">
            <%= turbo_frame_tag "flood_risk" do %>
              <%= render "dashboards/flood_risk", locations: @locations %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <%= turbo_stream_from "location_updates" %>
  <% end %>
</div>
