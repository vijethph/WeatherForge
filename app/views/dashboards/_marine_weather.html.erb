<% if locations.any? %>
  <% has_marine_data = locations.any? { |loc| loc.latest_marine_weather.present? } %>
  <% if has_marine_data %>
    <div class="row">
      <% locations.each do |location| %>
        <% marine = location.latest_marine_weather %>
        <% if marine.present? %>
          <div class="col-md-6 mb-3">
            <div class="card border-primary">
              <div class="card-body">
                <h6 class="card-title">
                  <%= location.name %>
                </h6>
                <div class="row mt-3">
                  <div class="col-6">
                    <small class="text-muted d-block">Wave Height</small>
                    <div class="h6 mb-0">
                      <i class="bi bi-water text-info"></i>
                      <%= marine.wave_height&.round(2) || "N/A" %> m
                    </div>
                  </div>
                  <div class="col-6">
                    <small class="text-muted d-block">Wave Period</small>
                    <div class="h6 mb-0">
                      <i class="bi bi-clock text-info"></i>
                      <%= marine.wave_period&.round(2) || "N/A" %> s
                    </div>
                  </div>
                </div>
                <% if marine.water_temperature.present? %>
                  <div class="mt-3 pt-3 border-top">
                    <small class="text-muted d-block">Water Temperature</small>
                    <div class="h6 mb-0">
                      <i class="bi bi-thermometer-half text-danger"></i>
                      <%= marine.water_temperature.round(1) %>&deg;C
                    </div>
                  </div>
                <% end %>
                <% if marine.recorded_at.present? %>
                  <div class="mt-2">
                    <small class="text-muted">
                      <i class="bi bi-clock-history"></i>
                      Updated <%= time_ago_in_words(marine.recorded_at) %> ago
                    </small>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info mb-0">
      <i class="bi bi-info-circle"></i>
      <strong>No marine data available</strong>
      <p class="mb-0 mt-2">Marine weather data will appear here once synchronized.
      <%= link_to "Sync now", sync_weather_dashboards_path, method: :post, class: "alert-link" %></p>
    </div>
  <% end %>
<% else %>
  <div class="alert alert-warning mb-0">
    <i class="bi bi-exclamation-triangle"></i>
    <strong>No locations added</strong>
    <p class="mb-0 mt-2">Please add locations to view marine weather data.</p>
  </div>
<% end %>
