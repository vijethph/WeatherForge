<div class="container-fluid mt-4">
  <div class="row mb-4">
    <div class="col-12">
      <h1 class="display-5">
        <i class="bi bi-graph-up"></i> Weather Trends
      </h1>
      <p class="lead text-muted">24-hour temperature and humidity analysis</p>
    </div>
  </div>

  <% if @locations.empty? %>
    <div class="alert alert-info text-center py-5">
      <i class="bi bi-cloud-slash" style="font-size: 4rem;"></i>
      <h3 class="mt-3">No locations added yet</h3>
      <p class="text-muted">Add locations to view weather trends</p>
      <%= link_to "Add Location", locations_path, class: "btn btn-primary btn-lg mt-3" %>
    </div>
  <% else %>
    <div class="row g-4 mb-4">
      <div class="col-lg-6">
        <div class="card h-100">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-thermometer-half"></i> Temperature Trend (24h)</h5>
          </div>
          <div class="card-body">
            <%= turbo_frame_tag "temperature_chart" do %>
              <%= render "dashboards/charts/temperature_chart", locations: @locations %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="col-lg-6">
        <div class="card h-100">
          <div class="card-header bg-info text-white">
            <h5 class="mb-0"><i class="bi bi-droplet-half"></i> Humidity Levels (24h)</h5>
          </div>
          <div class="card-body">
            <%= turbo_frame_tag "humidity_chart" do %>
              <%= render "dashboards/charts/humidity_chart", locations: @locations %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="row g-4">
      <div class="col-12">
        <div class="card">
          <div class="card-header bg-success text-white">
            <h5 class="mb-0"><i class="bi bi-wind"></i> Wind Speed Trend (24h)</h5>
          </div>
          <div class="card-body">
            <%= turbo_frame_tag "wind_speed_chart" do %>
              <%= render "dashboards/charts/wind_speed_chart", locations: @locations %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <%= turbo_stream_from "location_updates" %>
  <% end %>
</div>
