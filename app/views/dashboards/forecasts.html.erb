<div class="container-fluid mt-4">
  <div class="row mb-4">
    <div class="col-12">
      <h1 class="display-5">
        <i class="bi bi-clock-history"></i> Weather Forecasts
      </h1>
      <p class="lead text-muted">Hourly predictions and historical data</p>
    </div>
  </div>

  <% if @locations.empty? %>
    <div class="alert alert-info text-center py-5">
      <i class="bi bi-cloud-slash" style="font-size: 4rem;"></i>
      <h3 class="mt-3">No locations added yet</h3>
      <p class="text-muted">Add locations to view forecasts</p>
      <%= link_to "Add Location", locations_path, class: "btn btn-primary btn-lg mt-3" %>
    </div>
  <% else %>
    <div class="row g-4 mb-4">
      <div class="col-12">
        <div class="card">
          <div class="card-header bg-warning text-dark">
            <h5 class="mb-0"><i class="bi bi-clock"></i> 24-Hour Forecast</h5>
          </div>
          <div class="card-body">
            <%= turbo_frame_tag "hourly_forecast" do %>
              <%= render "dashboards/charts/hourly_forecast", locations: @locations %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="row g-4">
      <div class="col-12">
        <div class="card">
          <div class="card-header bg-secondary text-white">
            <h5 class="mb-0"><i class="bi bi-calendar-event"></i> 10-Day Historical Weather</h5>
          </div>
          <div class="card-body">
            <%= turbo_frame_tag "historical_chart" do %>
              <%= render "dashboards/charts/historical_chart", locations: @locations %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <%= turbo_stream_from "location_updates" %>
  <% end %>
</div>
