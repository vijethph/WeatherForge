<% if location.nil? %>
  <div class="alert alert-warning mb-0">
    <i class="bi bi-exclamation-triangle"></i> No location selected.
  </div>
<% else %>
  <% history = location.historical_weathers.where("weather_date > ?", 10.days.ago).order(:weather_date) %>
  <% if history.any? %>
    <div style="height: 400px; position: relative;">
      <%
        # Prepare data in simple format for Chartkick
        chart_data = history.map { |h|
          [h.weather_date.strftime('%b %d'), h.avg_temperature.round(1)]
        }
      %>
      <%= line_chart chart_data,
          height: '400px',
          xtitle: 'Date',
          ytitle: 'Avg Temperature (°C)',
          curve: false,
          points: true,
          colors: ['#7c3aed'],
          library: {
            animation: {
              duration: 750
            },
            scales: {
              y: {
                beginAtZero: false,
                ticks: {
                  callback: "function(value) { return value + '°C'; }".html_safe
                }
              }
            },
            plugins: {
              legend: {
                display: false
              },
              tooltip: {
                callbacks: {
                  label: "function(context) { return context.parsed.y + '°C'; }".html_safe
                }
              }
            }
          }
      %>
    </div>

    <!-- Data Table -->
    <div class="mt-3">
      <h6>Historical Data Points (<%= history.count %> entries)</h6>
      <div class="table-responsive" style="max-height: 300px; overflow-y: auto;">
        <table class="table table-sm table-striped">
          <thead class="table-dark sticky-top">
            <tr>
              <th>Date</th>
              <th>Max Temp</th>
              <th>Min Temp</th>
              <th>Avg Temp</th>
              <th>Precipitation</th>
            </tr>
          </thead>
          <tbody>
            <% history.each do |h| %>
              <tr>
                <td><%= h.weather_date.strftime('%b %d') %></td>
                <td><%= h.max_temperature.round(1) %>\u00b0C</td>
                <td><%= h.min_temperature.round(1) %>\u00b0C</td>
                <td><%= h.avg_temperature.round(1) %>\u00b0C</td>
                <td><%= h.total_precipitation.round(1) %> mm</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% else %>
    <div class="alert alert-warning mb-0">
      <i class="bi bi-exclamation-triangle"></i> No historical data available for <%= location.name %>. Click "Refresh Now" to fetch historical data.
    </div>
  <% end %>
<% end %>
