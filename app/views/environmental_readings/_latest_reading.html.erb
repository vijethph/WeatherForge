<% if reading %>
  <div class="alert alert-info mb-0">
    <div class="d-flex justify-content-between align-items-center">
      <div>
        <h6 class="mb-1">
          <strong><%= reading.value %></strong>
          <span class="text-muted"><%= reading.unit %></span>
        </h6>
        <small class="text-muted">
          <i class="bi bi-clock"></i>
          <%= time_ago_in_words(reading.recorded_at) %> ago
        </small>
      </div>
      <div>
        <% if reading.respond_to?(:parameter_name) && reading.parameter_name.present? %>
          <span class="badge bg-primary"><%= reading.parameter_name.upcase %></span>
        <% end %>
      </div>
    </div>
  </div>
<% else %>
  <div class="alert alert-warning mb-0">
    <i class="bi bi-exclamation-circle"></i>
    No readings available yet
  </div>
<% end %>
